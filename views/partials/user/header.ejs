                    </svg>
                    <span class="logo-text">LapKart</span>
                </div>
            </a>
        </div>

        <!-- Mobile menu toggle -->
        <div class="menu-toggle">
            <div class="hamburger"></div>
        </div>

        <!-- Navigation -->
        <nav class="nav-links">
            <a href="/home" class="nav-link">Home</a>
            <a href="/shop" class="nav-link">Shop</a>
            <a href="#" class="nav-link">Contacts</a>
        </nav>

