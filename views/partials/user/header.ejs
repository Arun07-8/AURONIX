    <script>
        (function() {
            // Wait for DOM to be fully loaded
            document.addEventListener('DOMContentLoaded', function() {
               

                // Profile dropdown toggle
                const profileButton = document.getElementById('profileButton');
                const profileDropdown = document.getElementById('profileDropdown');
                const profileContainer = document.querySelector('.header-scope .profile-container');

                if (!profileButton) console.warn('profileButton not found');
                if (!profileDropdown) console.warn('profileDropdown not found');
                if (!profileContainer) console.warn('profileContainer not found');

                if (profileButton && profileDropdown && profileContainer) {
                    profileButton.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        console.log('Profile button clicked');
                        const isActive = profileDropdown.classList.contains('active');
                        profileDropdown.classList.toggle('active', !isActive);
                        profileContainer.classList.toggle('active', !isActive);
                    });

                    document.addEventListener('click', function(e) {
                        if (!profileContainer.contains(e.target)) {
                            console.log('Clicked outside profile container');
                            profileDropdown.classList.remove('active');
                            profileContainer.classList.remove('active');
                        }
                    });

                    profileDropdown.addEventListener('click', function(e) {
                        e.stopPropagation();
                        console.log('Clicked inside profile dropdown');
                    });
                } else {
                    console.error('Dropdown initialization failed: Missing elements');
                }

                // Close banner
                const closeBanner = document.querySelector('.header-scope .close-btn');
                const topBanner = document.querySelector('.header-scope .top-banner');
                
                if (closeBanner && topBanner) {
                    closeBanner.addEventListener('click', function(e) {
                        e.preventDefault();
                        topBanner.style.display = 'none';
                    });
                }

                // Mobile menu toggle
                const menuToggle = document.querySelector('.header-scope .menu-toggle');
                const navLinksContainer = document.querySelector('.header-scope .nav-links');
                
                if (menuToggle && navLinksContainer) {
                    menuToggle.addEventListener('click', function(e) {
                        e.preventDefault();
                        navLinksContainer.classList.toggle('active');
                    });
                }

                // Home button click handling
                const logo = document.querySelector('.header-scope .logo');
                const navLinks = document.querySelectorAll('.header-scope .nav-link');
                
                navLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        navLinks.forEach(l => l.classList.remove('active'));
                        this.classList.add('active');
                        
                        if (this.getAttribute('href') === '/home') {
                            logo.classList.add('home-active');
                        } else {
                            logo.classList.remove('home-active');
                        }
                    });
                });

                // Set initial active state for Home if on homepage
                if (window.location.pathname === '/home') {
                    const homeLink = document.querySelector('.header-scope a[href="/home"]');
                    if (homeLink) {
                        homeLink.classList.add('active');
                        logo.classList.add('home-active');
                    }
                }
            });

            // Fallback to ensure dropdown styles are applied
            window.addEventListener('load', function() {
                const profileDropdown = document.getElementById('profileDropdown');
                if (profileDropdown && profileDropdown.classList.contains('active')) {
                    console.log('Ensuring dropdown visibility on load');
                    profileDropdown.style.opacity = '1';
                    profileDropdown.style.visibility = 'visible';
                    profileDropdown.style.transform = 'translateY(0)';
                }
            });
        })();
    </script>
