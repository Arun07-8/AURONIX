        /* Enhanced Scoped Header Styles */
        .header-scope {
            all: initial; /* Reset inherited styles */
            font-family: 'Poppins', sans-serif;
            display: block;
        }

        .header-scope * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Top Banner Styles */
        .header-scope .top-banner {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 8px 0;
            text-align: center;
            position: relative;
            font-size: 14px;
            z-index: 1001;
        }

        .header-scope .banner-laptops {
            display: none;
        }

        .header-scope .banner-content a {
            color: #fff;
            text-decoration: underline;
            font-weight: 500;
        }

        .header-scope .close-btn {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 20px;
            font-weight: bold;
        }

        /* Header Styles */
        .header-scope .site-header {
            background: #ffffff;
            padding: 0 141px;
            height: 85px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1000;
            flex-wrap: nowrap;
            gap: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Logo Section */
        .header-scope .logo {
            display: flex;
            align-items: center;
            flex-shrink: 0;
            margin-right: 10px;
            transition: margin-right 0.3s ease;
        }

        .header-scope .logo.home-active {
            margin-right: 5px;
        }

        .header-scope .logo a {
            display: flex;
            align-items: center;
            text-decoration: none;
        }

        .header-scope .logo-container {
            display: flex;
            align-items: center;
            gap: 8px;
            position: relative;
        }

        .header-scope .logo-icon {
            width: 36px;
            height: 36px;
            color: #060606;
            filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.5));
            transition: all 0.3s ease;
        }

        .header-scope .logo-text {
            font-family: 'Cinzel', serif;
            font-size: 41px;
            font-weight: 900;
            background: linear-gradient(to bottom, #000000 50%, #b0b0b0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            position: relative;
        }

        .header-scope .logo-text::after {
            content: '';
            position: absolute;
            width: 50%;
            height: 2px;
            bottom: -5px;
            left: 25%;
            background: #000000;
            transition: width 0.3s ease;
        }

        .header-scope .logo a:hover .logo-icon {
            transform: scale(1.05);
            color: #d4af37;
            filter: drop-shadow(2px 2px 6px rgba(0, 0, 0, 0.6));
        }

        .header-scope .logo a:hover .logo-text {
            transform: scale(1.03);
            background: linear-gradient(to bottom, #191717 50%, #a0a0a0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.6);
        }

        .header-scope .logo a:hover .logo-text::after {
            width: 80%;
        }

        .header-scope .logo-subtext {
            font-family: 'Poppins', sans-serif;
            font-size: 10px;
            font-weight: 500;
            color: #000000;
            margin-top: 4px;
            letter-spacing: 0.5px;
        }

        /* Navigation */
        .header-scope .nav-links {
            display: flex;
            gap: 40px;
            align-items: center;
        }

        .header-scope .nav-links a {
            text-decoration: none;
            color: #000000;
            font-weight: 500;
            font-size: 16px;
            transition: color 0.3s ease;
            position: relative;
        }

        .header-scope .nav-links a.active {
            color: #d4af37;
            font-weight: 600;
        }

        .header-scope .nav-links a.active::after {
            width: 100%;
        }

        .header-scope .nav-links a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 0;
            background: #d4af37;
            transition: width 0.3s ease;
        }

        .header-scope .nav-links a:hover {
            color: #d4af37;
        }

        .header-scope .nav-links a:hover::after {
            width: 100%;
