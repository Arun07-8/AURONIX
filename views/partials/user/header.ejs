        .header-scope .menu-toggle {
            display: none;
            flex-direction: column;
            cursor: pointer;
            gap: 4px;
            position: relative;
            width: 24px;
            height: 20px;
        }

        .header-scope .hamburger,
        .header-scope .hamburger::before,
        .header-scope .hamburger::after {
            width: 24px;
            height: 3px;
            background: #d1d5db;
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        .header-scope .hamburger {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
        }

        .header-scope .hamburger::before,
        .header-scope .hamburger::after {
            content: '';
            position: absolute;
        }

        .header-scope .hamburger::before {
            transform: translateY(-8px);
        }

        .header-scope .hamburger::after {
            transform: translateY(8px);
        }

        /* Hamburger Animation to "X" */
        .header-scope .menu-toggle.active .hamburger {
            background: transparent;
        }

        .header-scope .menu-toggle.active .hamburger::before {
            transform: rotate(45deg);
            background: #d4af37;
        }

        .header-scope .menu-toggle.active .hamburger::after {
            transform: rotate(-45deg);
