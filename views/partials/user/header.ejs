<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LapMart - Premium Electronics</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Cinzel:wght@700;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="/css/userside-css/userside-css/Header.css" rel="stylesheet">

</head>
<body>
    <div class="header-scope">
        <header class="site-header">
            <!-- Logo and Hamburger Container -->
            <div class="logo-hamburger-container">
                <!-- Mobile menu toggle -->
                <div class="menu-toggle" role="button" aria-label="Toggle menu">
                    <div class="hamburger"></div>
                </div>

                <!-- Logo -->
                <div class="logo">
                    <a href="/">
                        <div class="logo-container">
                            <svg class="logo-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                            </svg>
                            <span class="logo-text">LapMart</span>
                        </div>
                        <span class="logo-subtext">Premium Laptops</span>
                    </a>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="nav-links" role="navigation" aria-label="Main navigation">
                <a href="/" class="nav-link" id="home">Home</a>
                <a href="/shop" class="nav-link" id="shop">Shop</a>
                <a href="/contacts" class="nav-link" id="contacts">Contacts</a>
                <a href="/about" class="nav-link" id="About">About</a>
            </nav>

            <!-- Cart and Profile Section -->
            <div class="cart-profile">
                <a href="/wishlist" aria-label="Wishlist" id="header-wishlist-btn" class="header-wishlist-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                </a>
                <a href="/cart" aria-label="Cart" id="cart-btn" class="cart-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                </a>

                <% if (locals.user) { %>
                    <div class="profile-container">
                        <button class="profile-button" id="profileButton" aria-label="Profile">
                            <div class="profile-avatar">
                                <% if (user.profileImage && user.profileImage[0]) { %>
                                    <img src="<%= user.profileImage[0] %>" alt="Profile Image" class="avatar-img" />
                                <% } else { %>
                                    <span class="avatar-letter"><%= user.name.charAt(0).toUpperCase() %></span>
                                <% } %>
                            </div>
                            <span class="username"><%= user.name %></span>
                        </button>
                        <div class="profile-dropdown" id="profileDropdown">
                            <a href="/profile">Profile</a>
                            <a href="/view-order">My Orders</a>
                            <a href="/address">Address</a>
                            <a href="/wallet">Wallet</a>
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/login" class="signin-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                            <polyline points="10 17 15 12 10 7"></polyline>
                            <line x1="15" y1="12" x2="3" y2="12"></line>
                        </svg>
                        Sign In
                    </a>
                <% } %>
            </div>
        </header>

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar" role="complementary" aria-label="Sidebar navigation">
            <% if (locals.user) { %>
                <div class="sidebar-header">
                    <div class="profile-avatar">
                        <% if (user.profileImage && user.profileImage[0]) { %>
                            <img src="<%= user.profileImage[0] %>" alt="Profile Image" class="avatar-img" />
                        <% } else { %>
                            <span class="avatar-letter"><%= user.name.charAt(0).toUpperCase() %></span>
                        <% } %>
                    </div>
                    <div class="profile-info">
                        <h4><%= user.name %></h4>
                        <p><%= user.email %></p>
                    </div>
                </div>
            <% } else { %>
                <div class="sidebar-header">
                    <a href="/login" class="signin-btn" style="width: 100%; justify-content: center;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                            <polyline points="10 17 15 12 10 7"></polyline>
                            <line x1="15" y1="12" x2="3" y2="12"></line>
                        </svg>  
                        Sign In
                    </a>
                </div>
            <% } %>
            <ul class="sidebar-menu">
                <li><a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg> Home</a></li>
                <li><a href="/shop"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg> Shop</a></li>
                <li><a href="/contacts"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 2L11 13"></path><path d="M22 2l-7 20-4-9-9-4 20-7z"></path></svg> Contacts</a></li>
                <li><a href="/about"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12" y2="8"></line></svg> About</a></li>
                <% if (locals.user) { %>
                    <div class="sidebar-section">
                        <div class="sidebar-section-title">Shopping</div>
                        <li><a href="/wishlist" id="Wishlist-btn-sidebar"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg> Wishlist</a></li>
                        <li><a href="/cart" id="cart-btn-sidebar"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg> Cart</a></li>
                        <li><a href="/profile"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg> Profile</a></li>
                        <li><a href="/view-order"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg> My Orders</a></li>
                    </div>
                    <div class="sidebar-section">
                        <div class="sidebar-section-title">Account</div>
                        <li><a href="/address"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg> Address</a></li>
                        <li><a href="/wallet"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 22" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12V7H5a2 2 0 0 1 0-4h16v4"></path><path d="M3 5v14a2 2 0 0 0 2 2h16v-4"></path><path d="M18 12a2 2 0 0 0 0 4h3"></path></svg> Wallet</a></li>
                        <li><a href="/logout" class="logout-link"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg> Logout</a></li>
                    </div>
                <% } %>
            </ul>
        </div>
        <div class="sidebar-overlay" id="sidebarOverlay"></div>
    </div>

   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/userSide/header.js"></script>
</body>
</html>