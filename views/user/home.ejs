<h2 class="section-header">NEW ARRIVALS</h2>
<!-- Product Grid Section -->
<section class="product-grid" aria-label="New Arrivals">
    <% if (Array.isArray(product) && product.length > 0) { %>
        <% product.forEach((product) => { %>
            <article class="product-card" role="region" aria-labelledby="product-<%= product._id %>-title">
                <!-- Product Image -->
                <div class="product-image">
                    <a href="/productview?id=<%= product._id %>" class="no-underline" aria-label="View <%= product.productName || 'Unnamed Product' %>">
                        <img class="default-img" 
                             src="<%= product.productImage && product.productImage[0] ? product.productImage[0] : 'placeholder.jpg' %>" 
                             alt="<%= product.productName ? product.productName + ' laptop' : 'Laptop product image' %>">
                    </a>
                </div>
                <!-- Product Details -->
                <div class="product-details">
                    <h3 class="product-title" id="product-<%= product._id %>-title">
                        <%= product.productName || 'Unnamed Product' %>
                    </h3>
                    <div class="product-rating">
                        <% const rating = product.rating || 5; %>
                        <span class="stars" aria-label="Rating <%= rating %> out of 5">
                            <%= '★'.repeat(Math.floor(rating)) %><%= rating % 1 ? '☆' : '' %>
                        </span>
                        <span class="review-count">(<%= product.reviewCount || 45 %>)</span>
                    </div>
                    <div class="product-price">
                        ₹<%= product.salePrice ? product.salePrice.toLocaleString('en-IN') : 'Price not available' %>
                    </div>
                    <ul class="product-specs" aria-label="Product specifications">
                        <li><i class="fa fa-microchip" aria-hidden="true"></i> <%= product.processor || 'N/A' %></li>
                        <li><i class="fa fa-desktop" aria-hidden="true"></i> <%= product.graphicsCard || 'N/A' %></li>
                        <li><i class="fa fa-tv" aria-hidden="true"></i> <%= product.display || 'N/A' %></li>
                        <li><i class="fa fa-hdd-o" aria-hidden="true"></i> <%= product.Storage || 'N/A' %></li>
                    </ul>
                    <a href="/productview?id=<%= product._id %>" class="product-btn no-underline" aria-label="View <%= product.productName || 'Unnamed Product' %>">
                        View Details
                    </a>
                </div>
            </article>
        <% }) %>
    <% } else { %>
        <p class="no-products">No products available</p>
    <% } %>
</section>

