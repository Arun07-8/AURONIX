<%-include("../../views/partials/user/header")%>

<section class="hero">
    <div class="hero-content">
        <h1>FIND LAPTOPS THAT MATCH YOUR STYLE</h1>
        <p>Browse through our curated collection of stylish laptops and electronics, designed to bring out your individuality and cater to your tech needs.</p>
        <button class="btn">Shop Now</button>
    </div>
    <div class="hero-image">
        <img src="/images/banner/laptop-showcase.png" alt="Premium laptops" class="laptop-image">
    </div>
    <div class="decorative-star" style="top: 100px; right: 200px;"></div>
    <div class="decorative-star" style="bottom: 120px; left: 300px;"></div>
</section>
<section class="stats">
    <div class="stat-item">
        <h3>200+</h3>
        <p>International Brands</p>
    </div>
    <div class="stat-item">
        <h3>2,000+</h3>
        <p>High-Quality Products</p>
    </div>
    <div class="stat-item">
        <h3>30,000+</h3>
        <p>Happy Customers</p>
    </div>
</section>

<h2 class="section-header">NEW ARRIVALS</h2>
<section class="product-grid">
    <% if (Array.isArray(product) && product.length > 0) { %>
        <% product.forEach((product) => { %>
            <div class="product-card">
                <div class="product-image">
                    <a href="/product?id=<%= product.id %>" style="text-decoration: none;">
                        <img class="default-img" 
                             src="/Uploads/<%= product.productImage && product.productImage[0] ? product.productImage[0] : 'placeholder.jpg' %>" 
                             alt="<%= product.productName || 'Product Image' %>">
                    </a>
                </div>
                <div class="product-details">
                    <h3 class="product-title"><%= product.productName || 'Unnamed Product' %></h3>
                    <div class="product-rating">★★★★★ <span>(45)</span></div>
                    <div class="product-price">₹<%= product.salePrice ? product.salePrice : 'Price not available' %></div>
                    <ul class="product-specs">
                        <li><i class="fa fa-microchip"></i> <%= product.processor || 'N/A' %></li>
                        <li><i class="fa fa-desktop"></i> <%= product.graphicsCard || 'N/A' %></li>
                        <li><i class="fa fa-tv"></i> <%= product.display || 'N/A' %></li>
                        <li><i class="fa fa-hdd-o"></i> <%= product.storage || 'N/A' %></li>
                    </ul>
                    <a href="/product?id=<%= product.id %>" class="product-btn">View Details</a>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>No products available</p>
    <% } %>
</section>

<div class="view-all">
    <a href="/products">View All</a>
</div>

