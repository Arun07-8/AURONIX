<%- include("../../views/partials/user/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Lapmart Payment Failed Page- Retry Payment  </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .payment-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            max-width: 550px;
            width: 100%;
            padding: 40px 35px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .payment-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #ef4444, #dc2626);
        }

        .error-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #ef4444, #dc2626);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            color: white;
            font-size: 32px;
            font-weight: bold;
            box-shadow: 0 10px 30px rgba(239, 68, 68, 0.3);
        }

        .payment-title {
            font-size: 28px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 15px;
        }

        .payment-message {
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-left: 4px solid #ef4444;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 30px;
            text-align: left;
        }

        .payment-message p {
            color: #7f1d1d;
            font-size: 14px;
            line-height: 1.5;
            margin: 0;
        }

        .details-section {
            background: #f8fafc;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            border: 1px solid #e2e8f0;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #e2e8f0;
        }

        .detail-item:last-child {
            border-bottom: none;
        }

        .detail-label {
            color: #64748b;
            font-size: 14px;
            font-weight: 500;
        }

        .detail-value {
            color: #1e293b;
            font-size: 14px;
            font-weight: 600;
        }

        .error-code {
            background: #fef2f2;
            color: #dc2626;
            font-family: monospace;
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 700;
        }

        .amount {
            color: #ef4444;
            font-size: 16px;
            font-weight: 700;
        }

        .status-failed {
            color: #dc2626;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        .order-details-header {
            color: #374151;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 15px;
            text-align: left;
        }

        .button-container {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        .btn {
            flex: 1;
            max-width: 200px;
            padding: 14px 24px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-retry {
            background: #ef4444;
            color: white;
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        .btn-retry:hover {
            background: #dc2626;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        }

        .btn-support {
            background: #6b7280;
            color: white;
            box-shadow: 0 4px 12px rgba(107, 114, 128, 0.3);
        }

        .btn-support:hover {
            background: #4b5563;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(107, 114, 128, 0.4);
        }

        .btn-icon {
            font-size: 16px;
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .main-content {
                padding: 20px 10px;
            }
            
            .payment-container {
                padding: 30px 20px;
                margin: 10px;
            }
            
            .error-icon {
                width: 60px;
                height: 60px;
                font-size: 24px;
                margin-bottom: 20px;
            }
            
            .payment-title {
                font-size: 24px;
            }
            
            .button-container {
                flex-direction: column;
                gap: 12px;
            }
            
            .btn {
                max-width: 100%;
                padding: 16px 20px;
            }
            
            .detail-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 4px;
            }
            
            .detail-value {
                font-weight: 700;
            }
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .payment-container {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
</head>
<body>
    <main class="main-content">
        <div class="payment-container">
            <div class="error-icon">
                !
            </div>
            
            <h1 class="payment-title">Payment Failed</h1>
            
            <div class="payment-message">
                <p>Your payment could not be processed. Please try again or contact support for assistance.</p>
            </div>
            
            <div class="details-section">
                <div class="detail-item">
                    <span class="detail-label">Error Code:</span>
                    <span class="detail-value error-code"><%=errorCode || '400'%></span>
                </div>
                
                <div class="detail-item">
                    <span class="detail-label">Order ID:</span>
                    <span class="detail-value"><%=orderId%></span>
                </div>
                
    
            </div>
            
            <div class="details-section">
                <h3 class="order-details-header">Transaction Details</h3>
                
                <div class="detail-item">
                    <span class="detail-label">Amount:</span>
                    <span class="detail-value amount">â‚¹<%=amount%></span>
                </div>
                
                <div class="detail-item">
                    <span class="detail-label">Status:</span>
                    <span class="detail-value status-failed">Payment Failed</span>
                </div>
                
                <div class="detail-item">
                    <span class="detail-label">Reason:</span>
                    <span class="detail-value"> Transaction could not be completed</span>
                </div>
            </div>
            
            <div class="button-container">
                <button class="btn btn-retry" onclick="location.href='/order-details/<%=orderId%>?retry=true'">
                    <span class="btn-icon">ðŸ”„</span>
                    Retry Payment
                </button>
                <button class="btn btn-support" onclick="contactSupport()">
                    <span class="btn-icon">ðŸ’¬</span>
                    Contact Support
                </button>
            </div>
        </div>
    </main>

    <script>
        function contactSupport() {
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<span class="btn-icon">ðŸ“ž</span>Connecting...';
            btn.disabled = true;
            
            setTimeout(() => {
                alert('Opening support chat...');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 1000);
        }

        // Add keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && e.target.classList.contains('btn')) {
                e.target.click();
            }
        });
    </script>
</body>
</html>
<%- include("../../views/partials/user/footer") %>